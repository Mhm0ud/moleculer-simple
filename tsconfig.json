{
  "compilerOptions": {
    "paths": {
      "*": ["types/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "removeComments": true,
    "moduleResolution": "node",
    "pretty": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "./build",
    "baseUrl": "./"
  },
  "exclude": ["node_modules", "test"]
}
