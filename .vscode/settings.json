{
  "files.exclude": {
    "**/.DS_Store": true,
    "**/node_modules/": true,
    "**/coverage/": true,
    "**/npm-debug.log": true,
    "**/build": true,
    "**/.env": false
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": ["javascript"],
  "javascript.format.enable": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
